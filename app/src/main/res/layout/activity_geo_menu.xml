<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/map"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/map"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="mapButtonPressed"
        android:background="@drawable/background"
        android:src="@drawable/background"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cachelist"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/cache_list"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="cacheListButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addcache"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/add_cache"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="addCacheButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cachelist" />

    <Button
        android:id="@+id/mycache"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/my_cache"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="myCacheButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <Button
        android:id="@+id/mail"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/mail"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="mailButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycache" />

    <Button
        android:id="@+id/mainsettings"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background"
        android:gravity="center|bottom"
        android:onClick="settingsButtonPressed"
        android:paddingBottom="10dp"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addcache" />

</android.support.constraint.ConstraintLayout>