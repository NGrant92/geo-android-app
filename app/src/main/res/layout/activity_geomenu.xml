<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/map"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/map"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="mapButtonPressed"
        android:background="@drawable/background"
        android:src="@drawable/background"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/geolist"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/geo_list"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="geoListButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addgeo"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/add_geo"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="addGeoButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geolist" />

    <Button
        android:id="@+id/mygeos"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/my_geo"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="myGeosButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map" />

    <Button
        android:id="@+id/mail"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/mail"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="mailButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mygeos" />

    <Button
        android:id="@+id/mainsettings"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/settings"
        android:gravity="center|bottom"
        android:paddingBottom="10dp"
        android:onClick="settingsButtonPressed"
        android:background="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mygeos" />

</android.support.constraint.ConstraintLayout>