<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  
  <TextView
      android:id="@+id/cacheInfoTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="@string/cache_info"
      android:textAppearance="@android:style/TextAppearance.Large"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"/>
  
  
  <ImageView
      android:id="@+id/cacheInfoStar"
      android:onClick="toggle"
      android:layout_width="75dp"
      android:layout_height="75dp"
      android:layout_marginRight="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginBottom="32dp"
      android:layout_alignParentStart="true"
      android:gravity="center_vertical"
      android:src="@drawable/star_green_empty"
      android:contentDescription="fav"
      tools:ignore="HardcodedText"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
  
  <TextView
      android:id="@+id/cacheInfoNameTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/name"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoTitle"
      android:layout_marginLeft="0dp"
      app:layout_constraintLeft_toLeftOf="@+id/cacheInfoName"/>
  
  <TextView
      android:id="@+id/cacheInfoName"
      android:layout_width="210dp"
      android:layout_height="35dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:background="@drawable/background"
      android:text="@string/name"
      android:textColor="@color/colorBlack"
      android:gravity="center_vertical"
      android:paddingEnd="5dp"
      android:paddingStart="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteX="87dp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoNameTitle"/>
  
  <TextView
      android:id="@+id/cacheInfoLocationTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/location"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoName"
      android:layout_marginLeft="0dp"
      app:layout_constraintLeft_toLeftOf="@+id/cacheInfoLocation"/>
  
  <TextView
      android:id="@+id/cacheInfoLocation"
      android:layout_width="210dp"
      android:layout_height="32dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:background="@drawable/background"
      android:text="@string/location"
      android:textColor="@color/colorBlack"
      android:gravity="center_vertical"
      android:paddingEnd="5dp"
      android:paddingStart="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteX="87dp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoLocationTitle"/>
  
  <TextView
      android:id="@+id/cacheInfoDescriptionTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/description"
      android:layout_marginTop="16dp"
      android:layout_marginLeft="0dp"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoLocation"
      app:layout_constraintLeft_toLeftOf="@+id/cacheInfoDescription"/>
  
  <TextView
      android:id="@+id/cacheInfoDescription"
      android:layout_width="210dp"
      android:layout_height="130dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:text="@string/description"
      android:textColor="@color/colorBlack"
      android:paddingStart="5dp"
      android:paddingTop="5dp"
      android:paddingEnd="5dp"
      android:maxLength="140"
      android:gravity="top"
      android:background="@drawable/background"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:layout_editor_absoluteX="85dp"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoDescriptionTitle"/>

</android.support.constraint.ConstraintLayout>