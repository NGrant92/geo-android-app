<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  
  <TextView
      android:id="@+id/cacheInfoTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="@string/cache_info"
      android:textAppearance="@android:style/TextAppearance.Large"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"/>
  
  
  <ImageView
      android:id="@+id/cacheInfoStar"
      android:onClick="toggle"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="16dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_alignParentStart="true"
      android:gravity="center_vertical"
      android:src="@drawable/star_green_empty"
      android:contentDescription="fav"
      tools:ignore="HardcodedText"
      app:layout_constraintLeft_toRightOf="@+id/cacheInfoTitle"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_bias="0.505"/>
  
  <TextView
      android:id="@+id/cacheInfoName"
      android:layout_width="210dp"
      android:layout_height="35dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="32dp"
      android:background="@drawable/background"
      android:hint="@string/name"
      android:gravity="center_vertical"
      android:paddingEnd="5dp"
      android:paddingStart="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoTitle"
      tools:layout_editor_absoluteX="71dp"/>
  
  <TextView
      android:id="@+id/cacheInfoLocation"
      android:layout_width="210dp"
      android:layout_height="32dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="32dp"
      android:background="@drawable/background"
      android:hint="@string/location"
      android:gravity="center_vertical"
      android:paddingEnd="5dp"
      android:paddingStart="5dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoName"
      tools:layout_editor_absoluteX="85dp"/>
  
  <TextView
      android:id="@+id/cacheInfoDescription"
      android:layout_width="210dp"
      android:layout_height="130dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="32dp"
      android:hint="@string/description"
      android:paddingStart="5dp"
      android:paddingTop="5dp"
      android:paddingEnd="5dp"
      android:maxLength="140"
      android:gravity="top"
      android:background="@drawable/background"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/cacheInfoLocation" />

</android.support.constraint.ConstraintLayout>